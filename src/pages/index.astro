---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const name = 'Raghu Arun';
const title = 'Cyber Security Professional';
const email = 'arunraghu1234@gmail.com';
const phone = '+447823725340';
const linkedin = 'https://www.linkedin.com/in/arun-raghu-ar/';
const github = 'https://github.com/Arun-756';
---

<Layout title={`${name} | ${title}`}>
    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1>{name}</h1>
                <p class="subtitle">{title}</p>
                <p class="description">
                    Results-driven security analyst with hands-on expertise in vulnerability assessment, incident response, and cloud security
                </p>
                <div class="buttons">
                    <a href={`mailto:${email}`} class="btn btn-primary">Get In Touch</a>
                    <a href="#about" class="btn btn-secondary">Learn More</a>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="about">
            <div class="container">
                <h2>About Me</h2>
                <p>
                    I'm a results-driven Cyber Security professional with an MSc in Advanced Computer Science and hands-on experience in security operations,
                    vulnerability assessment, and incident response.
                </p>
            </div>
        </section>

        <!-- Experience Section -->
        <section id="experience" class="experience">
            <div class="container">
                <h2>Professional Experience</h2>
                <Card
                    title="AI Chatbot for Warmzilla"
                    company="Practera"
                    date="May 2025"
                    description="Completed a 2-week micro-internship designing a GPT-4 powered customer support chatbot."
                />

                <Card
                    title="Founder & CTO"
                    company="Golden Arc"
                    date="2022 â€“ 2024"
                    description="Founded a social impact startup aggregating government and private schemes for underserved communities."
                />

                <Card
                    title="Cyber Security Analyst (Intern)"
                    company="Tevel Cyber Corps"
                    date="2024"
                    description="Delivered vulnerability scans, penetration tests, and security reports."
                />
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="contact">
            <div class="container">
                <h2>Get In Touch</h2>
                <div class="contact-links">
                    <a href={`mailto:${email}`}>Email</a>
                    <a href={linkedin} target="_blank">LinkedIn</a>
                    <a href={`tel:${phone}`}>Phone</a>
                    <a href={github} target="_blank">GitHub</a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #f1f5f9;
        text-align: center;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #38bdf8 0%, #f1f5f9 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        font-size: 1.5rem;
        color: #cbd5e1;
        margin-bottom: 1rem;
    }

    .description {
        max-width: 600px;
        margin: 0 auto 2rem;
        color: #cbd5e1;
    }

    .buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.75rem 1.75rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid #38bdf8;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #38bdf8;
        color: #0f172a;
    }

    .btn-primary:hover {
        background: #0284c7;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: transparent;
        color: #38bdf8;
    }

    .btn-secondary:hover {
        background: rgba(56, 189, 248, 0.1);
    }

    .about,
    .experience,
    .contact {
        padding: 5rem 0;
    }

    .about {
        background: rgba(30, 41, 59, 0.5);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .contact-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
    }

    .contact-links a {
        padding: 0.75rem 1.5rem;
        border: 2px solid #38bdf8;
        border-radius: 0.5rem;
        color: #38bdf8;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .contact-links a:hover {
        background: #38bdf8;
        color: #0f172a;
    }
</style>
